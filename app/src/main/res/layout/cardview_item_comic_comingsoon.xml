<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:outlineProvider="bounds"
    android:elevation="4dp"
    android:layout_height="105dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgComingSoonItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:scaleType="fitStart"/>
        <LinearLayout
            android:id="@+id/backgroundItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <zenlife.nox.nox.fonts.SeeAllFontTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/nameComingSoonComic"
                android:textColor="@android:color/white"
                android:layout_weight="2"
                android:layout_margin="@dimen/margin_4dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/showmore_size"
        android:layout_height="@dimen/showmore_size"
        android:src="@drawable/icon_show_more"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_marginRight="@dimen/margin_4dp"
        android:layout_gravity="top|right"/>

</FrameLayout>